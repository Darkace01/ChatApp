@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="login-page">
    <div class="login-box">
        @* <div class="login-logo">
            <a href="../../index2.html"><b>Chat</b>App</a>
        </div> *@
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg login-logo">Login</p>
                <hr>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <label asp-for="Input.Email"></label>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fa fa-envelope"></span>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <label asp-for="Input.Password"></label>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fa fa-lock"></span>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input asp-for="Input.RememberMe">
                                <label asp-for="Input.RememberMe">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->

                        <!-- /.col -->
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                    </div>
                </form>
                <p class="mb-0">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">Not yet registered ? Register</a>
                </p>
                <p class="mb-1">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Forgot Password</a>
                    </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
